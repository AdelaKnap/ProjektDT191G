@model IEnumerable<ProjektDT191G.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-3">Speakers</h1>

@if (User.IsInRole("Administrator"))
{
    <p class="text-center">
        <a class="btn btn-primary mt-3 mb-3" asp-action="Create">Create New</a>
    </p>
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-label="Name">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td data-label="Actions">
                        <a class="btn btn-sm btn-outline-success" asp-action="Details"
                            asp-route-id="@item.SpeakerId">Details</a>

                        @if (User.IsInRole("Administrator")) @* Endast admin ska ha Ã¥tkomst *@
                        {
                            <span> | </span>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.SpeakerId">Edit</a>
                            <span> | </span>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete"
                                asp-route-id="@item.SpeakerId">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
