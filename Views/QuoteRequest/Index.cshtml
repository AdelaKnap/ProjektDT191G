@model IEnumerable<ProjektDT191G.Models.QuoteRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsProcessed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speaker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @item.RequestDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsProcessed)
                </td>
                <td>
                    @(item.Lecture?.Name ?? "Not assigned")
                </td>
                <td>
                    @(item.Speaker?.Name ?? "Not assigned")
                <td>
                    <a asp-action="Details" asp-route-id="@item.QuoteRequestId">Details</a>

                    @if (User.IsInRole("Administrator")) @* Endast admin ska ha Ã¥tkomst *@
                    {
                        <span> | </span>
                        <a asp-action="Edit" asp-route-id="@item.QuoteRequestId">Edit</a>
                        <span> | </span>
                        <a asp-action="Delete" asp-route-id="@item.QuoteRequestId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
